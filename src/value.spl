// value.spl

const MAX_FUNC_ARGC = 6; // TODO(lucas): temporary, pass additional arguments via stack

struct Function (
  ir_address            : u64,
  label                 : u64,
  argc                  : u64,
  locals_offset_counter : u64,
  rtype                 : Type,
  args                  : u64 : MAX_FUNC_ARGC
);

struct Value (
  func  : Function,
  num   : u64,
  konst : u64
);
