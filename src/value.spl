// value.spl

struct Function (
  ir_address:    u64,
  label:         u64,
  argc:          u64,
  locals_offset: u64,
  args:          u64[MAX_FUNC_ARGC]
);

struct Value (
  func:   Function,
  num:    u64,
  konst:  u64
);

fn function_init(func: ptr<Function>) -> none {
  store64 + func Function.ir_address 0;
  store64 + func Function.label 0;
  store64 + func Function.argc 0;
  store64 + func Function.locals_offset 0;
}
