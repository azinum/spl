fn ir_start_compile(ast : ptr) -> u64 {

  if neq load64 + @c Compile.entry_point 1 {
    compile_error("missing entry point `main`\n");
  }

  print_info("ir code generation took ? seconds\n");
  load64 + @c Compile.status;
}

