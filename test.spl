// test.spl

include "lib/common.spl"

fn high_order_bitmask(word_size : u64) -> u64 {
  let high_order : u64 rshift word_size 1;
  lshift ~(lshift UINT64_MAX high_order) high_order;
}

fn main -> none {
  assert(eq high_order_bitmask(2) 2, "\n");
  assert(eq high_order_bitmask(4) 12, "\n");
  assert(eq high_order_bitmask(8) 240, "\n");
}
